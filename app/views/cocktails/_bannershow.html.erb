<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.picture.nil? ? @cocktail.photo : @cocktail.picture, height: 300, width: 400, crop: :fill %>');">
  <div class="banner-content" >
<h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li class="list-unstyled">
            <%= dose.description %> of <%= dose.ingredient.name%>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
      <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.input :description, input_html: { placeholder: "5cl", :maxlength => 15, :size => 40 } %>
        <%= f.association :ingredient, prompt: "Select an ingredient" %>
        <%= f.button :submit %>
      <% end %>
      <%= link_to 'Delete', cocktail_path(@cocktail), method: :delete %><br>
      <%= link_to 'Back', cocktails_path %>

  </div>
</div>

