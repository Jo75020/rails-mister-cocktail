<div class="container">
  <div class="row">
  <h1 class="text-center">Add new cocktail!</h1>
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for @cocktail do |c| %>
  <%= c.input :name %>
  <%= c.input :description %>
  <%= c.input :rating, collection: [1,2,3,4,5] %>
  <%= c.submit "add a cocktail", class: "btn btn-primary" %>
<% end %>
    </div>
  </div>
</div>


